  <link rel="stylesheet" type="text/css" href="css/style.css">
  <link rel="stylesheet" href="css/mediaAdapt.css">

  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();

    socket.on('alphabetUpdated', (data) => {
      console.log('Alphabet update received:', data);
    });

    function updateAlphabet() {
      const newAlphabet = { alphabet: ' Ҕҕ, Ҥҥ, Өө, Һһ, Үү' };
      socket.emit('updateAlphabet', newAlphabet);
      console.log('Alphabet update sent:', newAlphabet);
    }
  </script>
</head>
